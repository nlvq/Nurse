<?xml version="1.0" encoding="UTF-8"?>

<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <on-start>
        <evaluate expression="defaultDisplayAuthorService.getAllDisplayAuthor()" result="flowScope.listAuthor" />
    </on-start>

    <view-state id="listAuthor" view="listAuthor.xhtml">

        <transition on="consulter" to="author">
            <!-- <set name="flowScope.author" value="listAuthor.selectedRow" /> -->
        </transition>

    </view-state>

    <view-state id="author" view="author.xhtml" model="author" />

</flow>