<?xml version="1.0" encoding="UTF-8"?>

<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="defaultDisplayAuthorService.getAllDisplayAuthor()" result="flowScope.listAuthor" result-type="dataModel"/>
	</on-start>

	<view-state id="listAuthor" view="listAuthor.xhtml">
		<transition on="consult" to="author">
			<set name="flowScope.selectedAuthor" value="listAuthor.selectedRow" />
		</transition>
		<transition on="addAuthor" to="addAuthor">
			<evaluate expression="authorService.setReadOnly(false)"/>
		</transition>
		<transition on="modifyAuthor" to="modifyAuthor">
			<evaluate expression="authorService.setReadOnly(false)"/>
			<evaluate expression="authorService.setDisplayAuthor(listAuthor.selectedRow)" />
		</transition>
		<transition on="removeAuthor" to="removeAuthor">
			<evaluate expression="authorService.setReadOnly(true)"/>
			<evaluate expression="authorService.setDisplayAuthor(listAuthor.selectedRow)" />
		</transition>
		<transition on="linkBook" to="linkBook">
			<set name="flowScope.selectedAuthor" value="listAuthor.selectedRow" />
		</transition>
	</view-state>
	
	<view-state id="author" view="author.xhtml" >
		<on-render>
			<evaluate expression="defaultDisplayBookService.getAllDisplayBookByAuthorId(flowScope.selectedAuthor.id)" result="flowScope.books" result-type="dataModel" />
		</on-render>
		<transition on="back" to="listAuthor" />
	</view-state>
	
	<view-state id="addAuthor" view="manageAuthor.xhtml">
		<transition on="valid" to="listAuthor">
			<evaluate expression="authorService.create()"/>
			<evaluate expression="defaultDisplayAuthorService.getAllDisplayAuthor()" result="flowScope.listAuthor" />
		</transition>
		<transition on="cancel" to="listAuthor">
			<evaluate expression="authorService.clear()"/>
		</transition>
	</view-state>
	
	<view-state id="modifyAuthor" view="manageAuthor.xhtml">
		<transition on="valid" to="listAuthor">
			<evaluate expression="authorService.modify()"/>
			<evaluate expression="defaultDisplayAuthorService.getAllDisplayAuthor()" result="flowScope.listAuthor" />
		</transition>
		<transition on="cancel" to="listAuthor">
			<evaluate expression="authorService.clear()"/>
		</transition>
	</view-state>
	
	<view-state id="removeAuthor" view="manageAuthor.xhtml">
		<transition on="valid" to="listAuthor">
			<evaluate expression="authorService.remove()"/>
			<evaluate expression="defaultDisplayAuthorService.getAllDisplayAuthor()" result="flowScope.listAuthor" />
		</transition>
		<transition on="cancel" to="listAuthor">
			<evaluate expression="authorService.clear()"/>
		</transition>
	</view-state>
	
	<view-state id="linkBook" view="linkAuthor.xhtml">
		<on-render>
			<evaluate expression="linkAuthorService.fillBookMap( defaultDisplayBookService.getAllDisplayBookWithoutAuthor() )"/>
		</on-render>
		<transition on="valid" to="listAuthor" >
			<evaluate expression="linkAuthorService.linkToBooks( flowScope.selectedAuthor )"/>
			<evaluate expression="linkAuthorService.resetAll()"/>
			<evaluate expression="defaultDisplayAuthorService.getAllDisplayAuthor()" result="flowScope.listAuthor" />
		</transition>
		<transition on="cancel" to="listAuthor" />
	</view-state>
	
</flow>